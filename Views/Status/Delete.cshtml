@model ApplicationRequestIt.Models.Status

@{
    ViewData["Title"] = "Delete";
}

<h2>Verwijder</h2>

<h3>Ben u zeker dat u deze status wilt verwijderen?</h3>
<div>
    <h4>Status</h4>
    <hr />
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Naam" class="control-label"></label>
            <input asp-for="Naam" readonly class="form-control" />            
        </div>
        <div class="form-group">
            <label asp-for="Omschrijving" class="control-label"></label>
            <input asp-for="Omschrijving" readonly class="form-control" />            
        </div>        
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Verwijder" class="btn red" /> 
            <a class="btn green" asp-action="Index">Terug naar overzicht.</a>
        </div>
    </form>
</div>
