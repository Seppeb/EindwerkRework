@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="Producten" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Alles start met betrouwbare, kwalitatieve producten.
                    <a class="btn btn-default blue" href="https://products.dobit.com/index.php?lang=nl">
                        Meer weten?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="InhouseCultuur" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Onze klanten en medewerkers moeten zich goed voelen. Daarom vinden wij een open, gemoedelijke cultuur belangrijk!
                    <a class="btn btn-default blue" href="http://solutions.dobit.com/nl/over-ons">
                        Meer weten?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Creativiteit" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Schermen hangen is één, creativiteit is minstens zo belangrijk! Wij gaan een stapje verder met technologie.
                    <a class="btn btn-default blue" href="http://solutions.dobit.com/nl/diensten/content">
                        Meer weten?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="technologie" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Dankzij onze technologische achtergrond weten we perfect wat kan en wat niet.
                    <a class="btn btn-default blue" href="https://www.dobit.com">
                        Meer weten?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner6.jpg" alt="Jobs" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    DOBIT is een bloeiend en groeiend bedrijf. We zijn dan ook regelmatig op zoek naar nieuwe mensen om het DOBIT-team te versterken.                    
                    <a class="btn btn-default blue" href="http://solutions.dobit.com/nl/jobs" >
                        Meer weten?
                    </a>
                </p>
            </div>
        </div>

        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

