@model IEnumerable<ApplicationRequestIt.Models.AanvraagBehandelaar>
@{
    ViewData["Title"] = "IndexToegewezen";
}
<h2>Toegewezen Aanvragen</h2>
<form asp-action="IndexAllAanvragen" method="get">
    <div class="form-actions no-color">
        <div class="row text-right">
            <label>Zoekterm:</label><input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Filter" class="btn blue" />
            <a class="btn green" asp-action="IndexToegewezen">Toon alles</a>
        </div>
    </div>
</form>
<table class="table table-responsive table-condensed table-hover table-striped">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aanvraag.Titel)
            </th>            
            <th>
                Gebruiker
            </th>            
            <th>
               Periode
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aanvraag.LinkVoorbeeldKlant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aanvraag.LinkVoorbeeldBehandelaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aanvraag.Status)
            </th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            @if (item.Aanvraag.IsVraag != true && item.Aanvraag.Status.Naam != "Afgesloten")
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aanvraag.Titel)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Aanvraag.ApplicationUser.UserName)
                    </td>                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Aanvraag.StartDatum) -                     
                        @Html.DisplayFor(modelItem => item.Aanvraag.EindDatum)
                    </td>
                    <td class="btn-link">
                        @Html.DisplayFor(modelItem => item.Aanvraag.LinkVoorbeeldKlant)
                    </td>
                    <td class="btn-link">
                        @Html.DisplayFor(modelItem => item.Aanvraag.LinkVoorbeeldBehandelaar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aanvraag.Status.Naam)
                    </td>
                    <td>
                        <a class="btn blue glyphicon glyphicon-edit" asp-action="Edit" asp-route-id="@item.Aanvraag.Id"  asp-route-isToegezen="true"></a>
                    </td>
                    <td>
                        <a class="btn green glyphicon glyphicon-info-sign" asp-action="Details" asp-route-id="@item.Aanvraag.Id"  asp-route-isToegezen="true"></a>
                    </td>
                    @*<td>
                        <a class="btn red glyphicon glyphicon-trash" asp-action="Delete" asp-route-id="@item.Aanvraag.Id"></a>
                    </td>*@
                </tr>
            }
        }
    </tbody>
</table>
